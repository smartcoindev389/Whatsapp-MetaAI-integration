            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/waba/embedded/start?shopId={{shopId}}",
              "host": ["{{baseUrl}}"],
              "path": ["waba", "embedded", "start"],
